<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center" id="top-bar">
			<h1> ¡¡Eat-Da-Burger!! </h1>
		</div>
		<div class="col-md-6 text-center task" class="task">
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-9 text-center">
					<pre id="bname">{{this.id}}. {{this.burger_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-md-3 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-danger">Devour!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center task" class="task">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center new_burger">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control entry" name="burger_name" value="">
				<button type="submit" class="btn btn-success" id="text-enter-button">New</button>
			</form>
		</div>
	</div>
</div>
